<div class="glass">
  <div class="logo">FERGUSSON COLLEGE,PUNE</div>
  <h2 id="title">Student Login</h2>

  <input id="roll" placeholder="Roll Number">
  <input id="password" type="password" placeholder="Password">

  <button onclick="handleAuth()">Login</button>

  <div class="link" onclick="toggleMode()">Don't have an account? Sign up</div>
  <div class="status" id="status"></div>
</div>

<script>
let isSignup = false;

function toggleMode() {
  isSignup = !isSignup;
  document.getElementById("title").innerText =
    isSignup ? "Student Sign Up" : "Student Login";
  document.querySelector("button").innerText =
    isSignup ? "Sign Up" : "Login";
  document.querySelector(".link").innerText =
    isSignup ? "Already have an account? Login"
             : "Don't have an account? Sign up";
}

function handleAuth() {
  const roll = document.getElementById("roll").value;
  const password = document.getElementById("password").value;

  if (!roll || !password) {
    document.getElementById("status").innerText = "Please fill all the details";
    return;
  }

  if (isSignup) {
    google.script.run.withSuccessHandler(res => {
      document.getElementById("status").innerText =
        res === "SUCCESS"
        ? "Signup successful! Please login."
        : "User already exists!";
      if (res === "SUCCESS") toggleMode();
    }).signup(roll, password);
  } else {
    google.script.run.withSuccessHandler(res => {
      document.getElementById("status").innerText =
        res === "SUCCESS"
        ? "Login successful âœ…"
        : "Invalid credentials";
    }).login(roll, password);
  }
}
</script>

</body>
