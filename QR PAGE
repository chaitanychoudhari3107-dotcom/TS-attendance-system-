<body>

  <div class="card">
    <h2> Scan QR Code</h2>
    <div class="subtitle">Scan QR to mark your attendance</div>

    <div id="reader"></div>

    <div class="result" id="result">
      Displaying QR code
    </div>

    <button onclick="stopScanner()">Stop Camera</button>
  </div>

<script>
  const resultElement = document.getElementById("result");
  let html5Qr;

  function onScanSuccess(decodedText) {
    resultElement.innerText = " QR Scanned: " + decodedText;

    
    html5Qr.stop();
  }

  function onScanFailure(error) {
    
  }

  function startScanner() {
    html5Qr = new Html5Qrcode("reader");
    html5Qr.start(
      { facingMode: "environment" },
      {
        fps: 10,
        qrbox: 250
      },
      onScanSuccess,
      onScanFailure
    );
  }

  function stopScanner() {
    if (html5Qr) {
      html5Qr.stop().then(() => {
        resultElement.innerText = "Camera stopped.";
      });
    }
  }

  
  startScanner();
</script>

</body>
